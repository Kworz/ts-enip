{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "_version": "20.1.0",
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "target": "es2022",
        "sourceRoot": "./src",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*"
    ]
}